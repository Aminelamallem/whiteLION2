{% extends 'baseAdmin.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
<div class="container mt-4">

    <h1 class="mb-4">Gestion des utilisateurs</h1>

    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Rôles</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Adresse</th>
                <th>Téléphone</th>
                <th>Créé le</th>
                <th>Modifié le</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>
                    {% for role in user.roles %}
                        <span class="badge bg-primary">{{ role }}</span>
                    {% endfor %}
                </td>
                <td>{{ user.name }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.address }}</td>
                <td>{{ user.phoneNumber }}</td>
                <td>{{ user.createdAt ? user.createdAt|date('d/m/Y H:i') : '' }}</td>
                <td>{{ user.updateAt ? user.updateAt|date('d/m/Y H:i') : '' }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9" class="text-center text-muted">Aucun utilisateur trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

  

</div>
{% endblock %}
