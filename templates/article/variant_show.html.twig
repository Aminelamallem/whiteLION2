{% extends 'base.html.twig' %}

{% block description %}{{parent()}} | White Lion T-shirth de combat sport. {% endblock %}
{% block keywords %}{{parent()}} | T-shirth{% endblock %}
{# {% block title %}{{parent()}} | T-shirth{% endblock %} #}

{% block body %}





<div class="container my-5 my-lg-7">
  <section class="sectionJs">

  <div class="card mx-auto my-5 p-3 p-lg-5" style="max-width: 900px;">
    <div class="row g-0">

      <!-- Colonne image -->
      <div class="col-md-6 d-flex align-items-center justify-content-center bg-secondary">
        <img src="{{ asset('uploads/images/' ~ variant.image) }}"
             alt="{{ variant.product.name }}"
             class="img-fluid p-3">
      </div>

      <!-- Colonne texte -->
      <div class="col-md-6 bg-dark text-white">
        <div class="card-body d-flex flex-column h-100">

          <h3 class="card-title mt-5">{{ variant.product.name }}</h3>
          <p class="fs-4 fw-bold">{{ variant.product.price }} €</p>

          <!-- Formulaire -->
          <div class="mb-3">
            {{ form_start(form) }}
              {{ form_row(form.colors) }}
              {{ form_row(form.genders) }}
              {{ form_row(form.sizes) }}

              {% if is_granted('ROLE_USER') %}
                <button type="submit" class="btn btn-light mt-3">Ajouter au panier</button>
              {% else %}
                <a href="{{ path('app_login') }}" class="btn btn-light mt-3">
                  Connectez-vous pour ajouter au panier
                </a>
              {% endif %}
            {{ form_end(form) }}
          </div>

          <div class="mt-auto">
            <a href="{{ path('app_variant_list') }}" class="btn btn-outline-light">← Retour</a>
          </div>

        </div>
      </div>

    </div>
  </div>

</section>
</div>
{# end for role user #}
{% endblock %}
