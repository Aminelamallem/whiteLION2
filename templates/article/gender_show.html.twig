{% extends 'base.html.twig' %}

{% block description %}{{ parent() }} | Gender article, White Lion vêtement de combat sport.{% endblock %}
{% block keywords %}{{ parent() }} | Gender article{% endblock %}
{% block title %}{{ parent() }} | Gender article{% endblock %}

{% block body %}
<section class="sectionJs">
<div class="container mt-5 py-5">

  <h1 class="h3 mb-5 text-center">T-shirts {{ gender.label }}</h1>

  <div class="row">
    {% for variant in variants %}
      <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4 text-center">
        <img 
          src="{{ asset(variant.image ? 'uploads/images/' ~ variant.image : 'images/placeholder-tee.png') }}" 
          alt="{{ variant.product.name }}" 
          class="mb-2"
          height="300"
        >
        <h5 class="mt-3">{{ variant.product.name }}</h5>

        <p>
          <small>Couleurs :</small>
          {% for color in variant.colors %}
            {{ color.label }}{% if not loop.last %}, {% endif %} 
          {% else %}
            <span class="text-muted">Aucune</span>
          {% endfor %}
        </p>

        <p><strong>{{ variant.product.price|number_format(2, ',', ' ') }} €</strong></p>

        <a href="{{ path('app_variant_show', {'id': variant.id}) }}" class="btn btn-sm btn-outline-dark">
          Voir
        </a>
      </div>
    {% else %}
      <div class="col-12 text-center">
        <p class="text-muted">Aucune variante disponible pour ce genre.</p>
      </div>
    {% endfor %}
  </div>
</div>
</section>
{% endblock %}
