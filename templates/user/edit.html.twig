{% extends 'base.html.twig' %}

{% block title %}Modifier l'utilisateur{% endblock %}

{% block body %}
<div class="container">


<section class="py-5">
  <div class="container">
    <h1 class="mb-4 text-center">Modifier l'utilisateur</h1>

    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm p-4">
          
          {{ form_start(form) }}

            <div class="mb-3">
              {{ form_label(form.email, 'Email') }}
              {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
              {{ form_errors(form.email) }}
            </div>

            <div class="mb-3">
              {{ form_label(form.name, 'Prénom') }}
              {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
              {{ form_errors(form.name) }}
            </div>

            <div class="mb-3">
              {{ form_label(form.lastName, 'Nom') }}
              {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
              {{ form_errors(form.lastName) }}
            </div>

            <div class="mb-3">
              {{ form_label(form.address, 'Adresse') }}
              {{ form_widget(form.address, {'attr': {'class': 'form-control'}}) }}
              {{ form_errors(form.address) }}
            </div>

            <div class="mb-3">
              {{ form_label(form.phoneNumber, 'Téléphone') }}
              {{ form_widget(form.phoneNumber, {'attr': {'class': 'form-control'}}) }}
              {{ form_errors(form.phoneNumber) }}
            </div>

            <div class="text-center">
              <button class="btn btn-warning px-4" type="submit">Modifier</button>
            </div>
          
          {{ form_end(form) }}

        </div>
      </div>
    </div>
  </div>
</section>
</div>
{% endblock %}
