{% extends 'baseAdmin.html.twig' %}

{% block title %}Variante du produit : {{ product.name }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Variante de <span class="text-primary">{{ product.name }}</span></h1>

    <div class="row g-4">
        <!-- Image de la variante -->
        <div class="col-md-5">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                     <img src="{{ asset('uploads/images/' ~ variant.image) }}" 
                                     alt="Variante {{ variant.id }}" 
                                     style="height: 300px; object-fit: cover;">
                </div>
            </div>
        </div>

        <!-- Détails de la variante -->
        <div class="col-md-7">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title mb-3">Détails de la variante</h4>

                    <p><strong>Couleurs :</strong>
                        {% if variant.colors|length %}
                            {% for color in variant.colors %}
                                <span class="badge bg-primary">{{ color.label }}</span>
                            {% endfor %}
                        {% else %}
                            <span class="text-muted">Aucune couleur</span>
                        {% endif %}
                    </p>

                    <p><strong>Tailles :</strong>
                        {% if variant.sizes|length %}
                            {% for size in variant.sizes %}
                                <span class="badge bg-success">{{ size.label }}</span>
                            {% endfor %}
                        {% else %}
                            <span class="text-muted">Aucune taille</span>
                        {% endif %}
                    </p>

                    <p><strong>Genres :</strong>
                        {% if variant.genders|length %}
                            {% for gender in variant.genders %}
                                <span class="badge bg-warning text-dark">{{ gender.label }}</span>
                            {% endfor %}
                        {% else %}
                            <span class="text-muted">Aucun genre</span>
                        {% endif %}
                    </p>

                    <div class="mt-4 d-flex gap-2">
                        <a href="{{ path('product_variant_list') }}" class="btn btn-primary">
                            <i class="bi bi-list"></i> Retour à la liste
                        </a>
                        <a href="{{ path('app_show', { id: product.id }) }}" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Retour au produit
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
