{# templates/admin/product_variant_list.html.twig #}

{% extends 'baseAdmin.html.twig' %}

{% block title %}Liste des Variantes de Produit{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Liste des Variantes de Produit</h1>

    {% if variants is not empty %}
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Image</th>
                    <th scope="col">ID</th>
                    <th scope="col">Nom du produit</th>
                    <th scope="col">Couleurs</th>
                    <th scope="col">Tailles</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for variant in variants %}
                    <tr>
                        <td>
                            {% if variant.image is not empty %}
                                <img src="{{ asset('uploads/images/' ~ variant.image) }}" 
                                     alt="Variante {{ variant.id }}" 
                                     style="height: 80px; object-fit: cover;">
                            {% else %}
                                <span class="text-muted">Aucune image</span>
                            {% endif %}
                        </td>
                        <td>{{ variant.id }}</td>
                        <td>{{ variant.product.name }}</td>
                        <td>
                            {% if variant.colors is not empty %}
                                {% for color in variant.colors %}
                                    <span class="badge bg-primary">{{ color.label }}</span>
                                {% endfor %}
                            {% else %}
                                <span class="text-muted">—</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if variant.sizes is not empty %}
                                {% for size in variant.sizes %}
                                    <span class="badge bg-success">{{ size.label }}</span>
                                {% endfor %}
                            {% else %}
                                <span class="text-muted">—</span>
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ path('product_variant_show', {'id': variant.id}) }}" 
                               class="btn btn-sm btn-outline-primary mb-1">Voir</a>
                            <a href="{{ path('product_variant_delete', {'id': variant.id}) }}" 
                               class="btn btn-sm btn-outline-danger mb-1">Supprimer</a>
                            <a href="{{ path('product_variant_edit', {'id': variant.id}) }}" 
                               class="btn btn-sm btn-outline-warning mb-1">Edit</a>
                        </td>
                    </tr>
                    
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p class="text-muted">Aucune variante trouvée.</p>
    {% endif %}
</div>
{% endblock %}
