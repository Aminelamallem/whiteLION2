{% extends 'baseAdmin.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Liste des Produits</h1>

    <a class="btn btn-outline-dark mb-3" href="{{ path('app_create') }}">CREATE PRODUCT</a>

    {% if product is not empty %}
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Nom</th>
                    <th scope="col">Description</th>
                    <th scope="col">Prix</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for item in product %}
                    <tr>
                        <td>{{ item.name }}</td>
                        <td>{{ item.description }}</td>
                        <td class="fw-bold text-primary">{{ item.price }} â‚¬</td>
                        <td class="d-flex flex-column gap-1">

                            <a href="{{ path('app_edit_product', {'id': item.id}) }}" class="btn btn-sm btn-outline-warning mb-1">Edit product</a>
                            <a href="{{ path('app_show', {'id': item.id}) }}" class="btn btn-sm btn-outline-dark mb-1">Voir</a>
                            <a href="{{ path('product_variant_create', {'id': item.id}) }}" class="btn btn-sm btn-outline-primary mb-1">CREATE VARIANT</a>
                            <a href="{{ path('app_delete-product', {'id': item.id}) }}" class="btn btn-sm btn-outline-danger mb-1">Delete</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p class="text-muted">Aucun produit disponible.</p>
    {% endif %}
</div>
{% endblock %}
