{% for notification in app.flashes('success') %}
    <div class="alert alert-success w-50 mx-auto text-center my-2" role="alert">
        {{ notification }}
    </div>
{% endfor %}

{% for notification in app.flashes('error') %}
    <div class="alert alert-danger w-50 mx-auto text-center my-2" role="alert">
        {{ notification }}
    </div>
{% endfor %}

{% for notification in app.flashes('warning') %}
    <div class="alert alert-warning w-50 mx-auto text-center my-2" role="alert">
        {{ notification }}
    </div>
{% endfor %}